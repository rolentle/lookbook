<div class='row'>
  <div class='large-8 columns'>
  <ul data-orbit>
    <% @photos.each do |photo| %>
      <li data-orbit-slide="<%="slide-#{photo.id}" %>">
      <div class='slide'><%= image_tag photo.standard_resolution_url, width: 612, height: 612 %>
      </div>
      </li>
    <% end %>
  <ul/>
  </div>
</div>
<div class='row'>
  <div class='large-12 columns'>
    <ul class='small-block-grid-5'>
      <% @photos[1..-1].each do |photo| %>
        <li><a class='th' data-orbit-link="<%= "slide-#{photo.id}" %>"><%= image_tag photo.thumbnail_url %></a></li>
      <% end %>
      <ul/>
  </div>
</div>
