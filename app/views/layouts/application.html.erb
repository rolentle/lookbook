  </head>

  <body>
  <div class="fixed">
    <nav class="top-bar" data-topbar>
      <div class='large-2 columns'>
        <ul class="title-area">
          <li class="name">
          <h1><a href="#">LookBook</a></h1>
          </li>
        </ul>
    </div>
    </nav>
  </div>

    <%= yield %>
    <%= javascript_include_tag "application" %>
  </body>
</html>
